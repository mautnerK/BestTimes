@model AdminLoginInfo
@{
    ViewData["Title"] = "Login Page";
}

<div class="text-center">
    <h1 class="display-4">Login</h1>
</div>

<div>
    @using (Html.BeginForm("Index", "Auth", FormMethod.Post))
    {
        if (ViewBag.LoginStatus != null)
        {
            if (ViewBag.LoginStatus == 0)
            {
                <div class="alert alert-danger">Invalid Login </div>
            }
        }

        <div class="input-group form-group">
            @Html.TextBoxFor(m => m.Username, new{@class = "form-control", @placeholder = "username" })
        </div>
        <div class="input-group form-group">

            @Html.TextBoxFor(m => m.Password, new{@class = "form-control", @placeholder = "password" })
        </div>
        <div class="form-group">
            <input type="submit" value="Login" class="login-btn" />
        </div>
    }
</div>
